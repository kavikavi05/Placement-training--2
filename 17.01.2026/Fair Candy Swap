class Solution {
    public int[] fairCandySwap(int[] A, int[] B) {
        int sa = 0, sb = 0;
        for (int a : A) sa += a;
        for (int b : B) sb += b;
        int diff = (sa - sb) / 2;
        Set<Integer> set = new HashSet<>();
        for (int a : A) set.add(a);
        for (int b : B)
            if (set.contains(b + diff))
                return new int[]{b + diff, b};
        return null;
    }
}
