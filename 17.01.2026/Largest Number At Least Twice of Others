class Solution {
    public int dominantIndex(int[] nums) {
        int max = -1, idx = -1;
        for (int i = 0; i < nums.length; i++) {
            if (nums[i] > max) {
                max = nums[i];
                idx = i;
            }
        }
        for (int n : nums) {
            if (n != max && max < 2 * n) return -1;
        }
        return idx;
    }
}
