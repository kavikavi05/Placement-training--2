class Solution {
    public int binaryGap(int n) {
        int last = -1, res = 0, i = 0;
        while (n > 0) {
            if ((n & 1) == 1) {
                if (last != -1)
                    res = Math.max(res, i - last);
                last = i;
            }
            n >>= 1;
            i++;
        }
        return res;
    }
}
