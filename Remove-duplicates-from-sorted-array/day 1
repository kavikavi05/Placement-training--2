class Solution {
    public int removeDuplicates(int[] nums) {
        if(nums.length == 0) return 0; //base case

        int i = 0; //starting of the unique elements
        
        //traverse the array
        for(int j=1 ; j<nums.length ; j++){
            if(nums[i] != nums[j]){ //unique element found
                i++; //increase the count by 1
                nums[i] = nums[j]; //put the i on the founded unique element
            }
        }
        return i+1; //return i+1 because we had started i by 0
    }
}
