class Solution:
    def findWords(self, words):
        r1 = set("qwertyuiop")
        r2 = set("asdfghjkl")
        r3 = set("zxcvbnm")

        res = []
        for w in words:
            s = set(w.lower())
            if s <= r1 or s <= r2 or s <= r3:
                res.append(w)
        return res
