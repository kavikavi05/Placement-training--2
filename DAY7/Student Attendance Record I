class Solution {
    public boolean checkRecord(String s) {
        int absent = 0, late = 0;
        for (char c : s.toCharArray()) {
            if (c == 'A') absent++;
            if (c == 'L') late++;
            else late = 0;
            if (absent > 1 || late > 2) return false;
        }
        return true;
    }
}
